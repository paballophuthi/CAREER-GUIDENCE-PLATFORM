/* Career Guidance Platform - Dark Professional Theme */
:root {
  --primary: #2B3A67;
  --secondary: #7B6CF6;
  --background: #181A20;
  --card-bg: #23262F;
  --text-heading: #FFFFFF;
  --text-body: #C7C9D3;
}

.App {
  min-height: 100vh;
  background-color: var(--background);
}

/* Text Colors */
.text-white {
  color: var(--text-heading) !important;
}

.text-c7c9d3 {
  color: var(--text-body) !important;
}

/* Navbar Gradient */
.bg-gradient {
  background: linear-gradient(135deg, var(--primary), var(--secondary)) !important;
}

.navbar-brand {
  font-weight: bold;
  font-size: 1.5rem;
}

/* Card Styling */
.card-dark {
  background-color: var(--card-bg) !important;
  border: 1px solid #2A2D3A !important;
}

.card {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  transition: transform 0.2s, box-shadow 0.2s;
  border: none;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.rounded-4 {
  border-radius: 1rem !important;
}

/* Button Styling */
.btn-gradient {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  border: none;
  border-radius: 25px;
  padding: 8px 20px;
  font-weight: 500;
  color: white;
  transition: transform 0.2s, box-shadow 0.2s;
}

.btn-gradient:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(123, 108, 246, 0.4);
  color: white;
}

/* Hero Section */
.display-4 {
  background: linear-gradient(135deg, var(--text-heading), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Footer Styling */
.footer {
  background-color: var(--card-bg) !important;
  border-top: 1px solid #2A2D3A;
  margin-top: auto; /* Push footer to bottom */
}

.bg-card {
  background-color: var(--card-bg) !important;
}

.footer-link {
  text-decoration: none;
  transition: color 0.2s ease;
}

.footer-link:hover {
  color: var(--secondary) !important;
}

.social-links a {
  font-size: 1.2rem;
  transition: color 0.2s ease;
}

.social-links a:hover {
  color: var(--secondary) !important;
}

/* Ensure proper spacing between last row and footer */
.min-vh-100 {
  min-height: 100vh !important;
}

.flex-grow-1 {
  flex-grow: 1 !important;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--card-bg);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, var(--secondary), var(--primary));
}

/* Font Awesome Icons (using CDN in HTML) */
.fab, .fas {
  width: 16px;
  height: 16px;
}

/* Form Styling */
.form-control, .form-select {
  background-color: var(--card-bg) !important;
  border: 1px solid #2A2D3A !important;
  color: var(--text-body) !important;
}

.form-control:focus, .form-select:focus {
  background-color: var(--card-bg) !important;
  border-color: var(--secondary) !important;
  color: var(--text-body) !important;
  box-shadow: 0 0 0 0.2rem rgba(123, 108, 246, 0.25);
}

.form-label {
  color: var(--text-body) !important;
  font-weight: 500;
}

/* Tab Styling */
.nav-tabs.nav-dark {
  border-bottom: 1px solid #2A2D3A;
}

.nav-tabs.nav-dark .nav-link {
  color: var(--text-body);
  background-color: transparent;
  border: 1px solid transparent;
  border-radius: 0.5rem 0.5rem 0 0;
}

.nav-tabs.nav-dark .nav-link:hover {
  color: var(--secondary);
  border-color: transparent;
}

.nav-tabs.nav-dark .nav-link.active {
  color: var(--secondary);
  background-color: transparent;
  border-color: #2A2D3A #2A2D3A var(--background);
  font-weight: 600;
}

/* Alert Styling */
.alert {
  border: none;
  border-radius: 0.75rem;
}

.alert-info {
  background-color: rgba(123, 108, 246, 0.1);
  color: var(--text-body);
}

.alert-danger {
  background-color: rgba(220, 53, 69, 0.1);
  color: #f8d7da;
}
